# INTRA-HUB v1.0 - Nginx Configuration
# Place this in /etc/nginx/sites-available/intra-hub
# Then: sudo ln -s /etc/nginx/sites-available/intra-hub /etc/nginx/sites-enabled/
# Then: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    server_name intra-hub.internal intra-hub;
    
    # Optional: Redirect to HTTPS
    # return 301 https://$server_name$request_uri;
    
    root /opt/intra-hub/public;
    index index.html;
    
    # Logging
    access_log /var/log/nginx/intra-hub-access.log;
    error_log /var/log/nginx/intra-hub-error.log;
    
    # Character encoding
    charset utf-8;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Main location
    location / {
        try_files $uri $uri/ =404;
    }
    
    # Document pages
    location /documents/ {
        try_files $uri =404;
    }
    
    # Static assets
    location /static/ {
        expires 1d;
        add_header Cache-Control "public, immutable";
    }
    
    # Disable access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Metrics tracking endpoint (optional, for future implementation)
    location /api/metrics {
        # This would need a backend service to track views/downloads
        return 501;
    }
}

